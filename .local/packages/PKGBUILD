license=('ISC')
pkgbase='paks'

package_paks-sys-base() {
  pkgdesc="Minimum system packages, required for installation"
  provides=(man-db)
  replaces=(paks-base)

  optional=('linux')

  depends=(
    #boot
    'arch-secure-boot'
    'efibootmgr'
    'efitools'
    'intel-ucode'
    'linux'
    'linux-firmware'
    'linux-lts'

    # os
    'base'
    'base-devel'
    'dash'
    'iwd'
    'kernel-modules-hook'
    'pacman-contrib'
    'pacman-hook-kernel-install'
    'terminus-font'
    'zsh'
    
    # services/tools
    'btrfs-progs'
    'firewalld'
    'logrotate'
    'reflector'
    'snap-pac'

    # required by setup
    'dialog'
    'jq'
  )
}

