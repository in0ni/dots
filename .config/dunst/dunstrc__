background = "#%{{gruv_dark_bg_0}}%{{trnz_50}}"
foreground = "#%{{gruv_light_bg_0}}"
highlight = "#%{{theme_highlight}}"
frame_color = "#%{{gruv_dark_bg_4}}"
timeout = 2

[urgency_normal]
