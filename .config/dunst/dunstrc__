[global]
# on wayland there is no difference between mouse/keyboard
follow = mouse
width = 350
height = 150
offset = 10x10
progress_bar_height = 15
progress_bar_max_width = 400
separator_height = 1
padding = 10
horizontal_padding = 10
frame_width = 1
frame_color = "#%{shell_light_4}%"
separator_color = frame
# Don't remove messages, if the user is idle (no mouse or keyboard input)
# for longer than idle_threshold seconds.
# Set to 0 to disable.
# A client can set the 'transient' hint to bypass this. See the rules
# section for how to disable this if necessary
idle_threshold = 120

### Text ###
font = %{font_sans}% %{font_size_xs}%
markup = full
format = "<b>%s</b>\n%b"
show_age_threshold = 60
word_wrap = true

### Icons ###
icon_position = left
max_icon_size = 64
icon_path = /usr/share/icons/%{theme_icon}%/24/panel

### Misc/Advanced ###
# dmenu = /usr/bin/rofi -dmenu -p dunst:
browser = /usr/bin/firefox -new-tab
corner_radius = 2

### mouse

# Defines list of actions for each mouse event
# Possible values are:
# * none: Don't do anything.
# * do_action: If the notification has exactly one action, or one is marked as default,
#              invoke it. If there are multiple and no default, open the context menu.
# * close_current: Close current notification.
# * close_all: Close all notifications.
# These values can be strung together for each mouse event, and
# will be executed in sequence.
mouse_left_click = close_current
mouse_middle_click = do_action, close_current
mouse_right_click = close_all

[urgency_low]
background = "#%{gruv_dark}%%{a50}%"
foreground = "#%{gruv_light}%"
highlight = "#%{shell_highlight}%"
frame_color = "#%{gruv_dark_4}%"
timeout = 2

[urgency_normal]
background = "#%{gruv_dark}%%{a20}%"
foreground = "#%{gruv_light_h}%"
highlight = "#%{shell_highlight}%"
frame_color = "#%{gruv_dark_3}%"
timeout = 4

[urgency_critical]
background = "#%{gruv_light_red}%%{a20}%"
foreground = "#%{gruv_light_h}%"
highlight = "#%{gruv_light}%"
frame_color = "#%{gruv_dark}%"
default_icon = /usr/share/icons/%{theme_icon_variant}%/24/panel
timeout = 0

[sway_hotkeys]
appname = "sway_hotkeys"
background = "#%{gruv_dark}%%{a20}%"
foreground = "#%{shell_light_1}%"
highlight = "#%{shell_highlight}%"
frame_color = "#%{gruv_dark}%"
timeout = 2
